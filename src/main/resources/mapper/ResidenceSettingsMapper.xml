<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.dguan.project_rent.mapper.ResidenceSettingsMapper">
    <select id="findResidenceById" resultType="com.dguan.project_rent.dto.CustomerInfo">
        select * from customer_info where customer_id = #{id}
    </select>
    <update id="changePassword">
        update customer_info set customer_password = #{new_password} where customer_id = #{id}
    </update>
</mapper>